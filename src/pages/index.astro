---
import CleanLayout from '../layouts/CleanLayout.astro';
import CleanNavbar from '../components/CleanNavbar';
import CleanFooter from '../components/CleanFooter';
---

<CleanLayout title="CDO as a Service - Home">
  <CleanNavbar client:load />
  
  <main>
    <!-- Hero Section -->
    <section class="hero">
      <div class="container">
        <div class="text-center">
          <h1>
            <span class="block" data-i18n="hero_title"></span>
            <span class="block text-primary" data-i18n="hero_subtitle"></span>
          </h1>
          <p class="mt-3 mx-auto text-base text-secondary" data-i18n="hero_description"></p>
          <div class="mt-5 mx-auto flex flex-col sm:flex-row justify-center md:mt-8">
            <div class="rounded shadow">
              <a href="/contact" class="btn btn-primary" data-i18n="get_started"></a>
            </div>
            <div class="mt-3 rounded shadow sm:mt-0 sm:ml-3">
              <a href="/services" class="btn btn-outline" data-i18n="learn_more"></a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Feature Section -->
    <section class="feature-section">
      <div class="container">
        <div class="text-center">
          <h2 class="text-primary uppercase" data-i18n="our_services"></h2>
          <p class="mt-2 text-3xl font-bold text-text-primary" data-i18n="comprehensive_data_leadership"></p>
          <p class="mt-4 text-xl text-secondary mx-auto" data-i18n="services_description"></p>
        </div>

        <div class="mt-10">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="card">
              <div class="card-body">
                <div class="bg-primary text-white p-3 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                  <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                  </svg>
                </div>
                <h3 class="card-title" data-i18n="data_strategy"></h3>
                <p class="card-text" data-i18n="data_strategy_description"></p>
              </div>
            </div>

            <div class="card">
              <div class="card-body">
                <div class="bg-primary text-white p-3 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                  <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                </div>
                <h3 class="card-title" data-i18n="analytics_implementation"></h3>
                <p class="card-text" data-i18n="analytics_implementation_description"></p>
              </div>
            </div>

            <div class="card">
              <div class="card-body">
                <div class="bg-primary text-white p-3 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                  <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                  </svg>
                </div>
                <h3 class="card-title" data-i18n="data_governance"></h3>
                <p class="card-text" data-i18n="data_governance_description"></p>
              </div>
            </div>

            <div class="card">
              <div class="card-body">
                <div class="bg-primary text-white p-3 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                  <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
                  </svg>
                </div>
                <h3 class="card-title" data-i18n="decision_support"></h3>
                <p class="card-text" data-i18n="decision_support_description"></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-accent">
      <div class="container py-12 flex flex-col lg:flex-row lg:items-center lg:justify-between">
        <h2 class="text-3xl font-bold text-white">
          <span class="block" data-i18n="cta_title"></span>
          <span class="block text-blue-300" data-i18n="cta_subtitle"></span>
        </h2>
        <div class="mt-8 flex lg:mt-0">
          <div class="rounded shadow">
            <a href="/contact" class="btn btn-primary bg-white text-primary hover:bg-gray-100" data-i18n="contact_us"></a>
          </div>
          <div class="ml-3 rounded shadow">
            <a href="/tools" class="btn btn-outline text-white border-white hover:bg-white hover:text-primary" data-i18n="explore_tools"></a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <CleanFooter />
</CleanLayout> 